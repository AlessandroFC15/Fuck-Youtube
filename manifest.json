{
  "author": "Alessandro Costa",
  "manifest_version": 2,
  "name": "F*ck YouTube",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",

  "default_locale": "en",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://youtube.com/*",
    "*://www.youtube.com/*",
    "*://www.youpak.com/*"
  ],

  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["content.js"]
  }],

  "web_accessible_resources": [
    "images/*.png"
  ]
  
}